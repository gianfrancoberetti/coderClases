    <%- include('./layouts/head') %>

<body class="m-0 row justify-content-center">
    <div class="container" style="background-color: #d3d3dc;">
        <div style="margin: auto;">
            <form>
                <div class="form-group">
                  <label>Nombre</label>
                  <input type="text" class="form-control" id="nombre" placeholder="Ingrese nombre del Producto">
                </div>
                <div class="form-group">
                  <label>Precio</label>
                  <input type="text" class="form-control" id="precio" placeholder="Ingrese el precio">
                </div>
                <button id="submit" class="btn btn-primary">Submit</button>
              </form>
    
        </div>
        <div class="pt-1">
            <table class ="table table-dark"  >
                <thead>
                    <tr>
                        <th>nombre</th>
                        <th>precio</th>
                        <th>imagen</th>
                    </tr>
                </thead>
                <tbody>
                    <% productos.forEach(function(producto) { %>
                    <tr>
                            <td><strong><%= producto.nombre %></strong></td>           
                            <td><strong><%= producto.precio %></strong></td>           
                            <td><img src=<%= producto.imagen %> alt= <%= producto.imagen %>></td>
                    </tr>
                    <% }); %>
                </tbody>
            </table>
        </div>
    </div>
    <script src="/scripts.js" type="module"></script>
</body>