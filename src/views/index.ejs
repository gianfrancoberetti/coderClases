    <%- include('./layouts/head') %>

<body class="m-0 row justify-content-center">
    <div class="container">   
    <div style="background-color: #d3d3dc;">
        <div>
            <form>
                <div class="form-group">
                  <label>Nombre</label>
                  <input type="text" class="form-control" id="nombre" placeholder="Ingrese nombre del Producto">
                </div>
                <div class="form-group">
                  <label>Precio</label>
                  <input type="text" class="form-control" id="precio" placeholder="Ingrese el precio">
                </div>
                <label>Imagen</label>
                <input type="text" class="form-control" id="imagen" placeholder="URL">
              </div>
                <button type="button" id="submit" class="btn">Submit</button>
              </form>
    
        </div>
        <div>
            <table class ="table table-dark"  >
                <thead>
                    <tr>
                        <th>nombre</th>
                        <th>precio</th>
                        <th>imagen</th>
                    </tr>
                </thead>
                <tbody>
                    <% productos.forEach(function(producto) { %>
                    <tr>
                            <td><strong><%= producto.nombre %></strong></td>           
                            <td><strong><%= producto.precio %></strong></td>           
                            <td><img style="max-width: 50px;" src=<%= producto.imagen %> alt= <%= producto.imagen %>></td>
                    </tr>
                    <% }); %>
                </tbody>
            </table>
        </div>
        <div id="chat-container">
            <div id="chat-window">
                <div id="output">
    
                </div>
            </div>
            <input type="text" id="usuario" placeholder="usuario">
            <input type="text" id="mensaje" placeholder="mensaje">
            <button id="enviar" class="btn"> Enviar Mensaje</button>
        </div>
    </div>
    </div>



    <script src="/scripts.js" type="module"></script>
</body>